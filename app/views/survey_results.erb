<div class="container">

  <div class="head">
    <h1>Summary</h1>
    <img src='<%="#{@survey.pic_url}"%>' /><br><br>
    <a href='<%= "/surveys/#{@survey.id}" %>'><h3><%=@survey.title%></a></h3><br>
    <a href='<%= "/surveys/#{@survey.id}/responses" %>'>View list of users who have taken the survey</a><br><br><br>
    <a href='<%= "/surveys/#{@survey.id}/results/graph" %>'>View graph of survey results</a><br><br><br>
  </div>

  <div class="stat_summary"> 
    <% @question_stats.each do |qs| %>
    Question: <%= qs[:question] %> <br><br>

    <table id="survey_results">
      <tr>
        <td>Answer</td>
        <td>Count</td>
      </tr>
      <% qs[:stats].each do |s| %>
      <tr>
        <td>
          <%=s[:answer] %>
        </td>
        <td>
          <%= s[:count] %>
        </td>
      </tr>
      <%end%>
    </table>

    <br><br>
    <%end%>
  </div>
</div>